{
    "manifest_version": 3,
    "name": "Hulk",
    "version": "1.0",
    "description": "点击按钮将网页背景改为皮卡丘图片",
    "icons": {
        "16": "icons/icon16.png",   
        "48": "icons/icon48.png",   
        "128": "icons/icon128.png"  
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",   
            "48": "icons/icon48.png",   
            "128": "icons/icon128.png"  
        }
    },
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "web_accessible_resources": [{
        "resources": ["images/*"],
        "matches": ["<all_urls>"]
    }]
}